.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-body
        = simple_form_for(@list) do |f|
          = f.error_notification

          .form-inputs
            = f.input :name, input_html: { autofocus: true }
            = f.input :description

          .form-actions
            = f.button :submit, class: "btn btn-success btn-block"
