.container-fluid
  .row
    .col-md-12
      .btn-group{ role: "group" }
        = link_to new_list_path, class: "btn btn-success" do |f|
          = fa_icon "plus", text: "New todo list"
  .row
    .col-md-12
      %h2 Your todo lists
  .row
    - @lists.each do |list|
      .col-md-3
        .panel.panel-default
          .panel-heading
            %strong
              = link_to list.name, list
          .panel-body
            .progress
              .progress-bar.progress-bar-success{ role: "progressbar", aria: { valuenow: list.percent_done, valuemin: 0, valuemax: 100 }, style: "width: #{list.percent_done}%" }
                = "#{list.percent_done}% Complete"
            %p
              - if list.shared?
                List is shared.
              - else
                This list is only visible to you.
            %p= list.description
